@model Dish

<div class="card col-8 m-auto mt-4 p-3 box-shadow">
    <form asp-action="@ViewData["Action"]" asp-controller="Home" asp-route-Id="@ViewData["UpdateRouteId"]" method="post">
        <div class="card-body d-flex justify-content-between">
            <div class="left-side col-4">

                <div class="form-floating">
                    <input asp-for="Chef" class="form-control" placeholder="Chef's Name:">
                    <label asp-for="Chef">Chef's Name:</label>
                    <span asp-validation-for="Chef" class="validation-text"></span>
                </div>

                <div class="form-floating mt-3">
                    <input asp-for="Name" class="form-control" placeholder="Dish Name:">
                    <label asp-for="Name">Dish Name:</label>
                    <span asp-validation-for="Name" class="validation-text"></span>
                </div>

                <div class="form-floating mt-3">
                    <input asp-for="Calories" class="form-control" placeholder="Calories:" min="1" value="1">
                    <label asp-for="Calories">Calories:</label>
                    <span asp-validation-for="Calories" class="validation-text"></span>
                </div>

            </div>
            <div class="middle col-3">
                <div class="form-floating">
                    <select class="form-select" asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <label asp-for="Tastiness">Tastiness:</label>
                    <span asp-validation-for="Tastiness" class="validation-text"></span>
                </div>
            </div>

            <div class="right-side d-flex flex-column align-items-end">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Description:" asp-for="Description"
                        style="height: 150px; width: 270px"></textarea>
                    <label asp-for="Description">Description:</label>
                    <span asp-validation-for="Description" class="validation-text"></span>
                </div>
                
                <input type="submit" value="@ViewData["ButtonText"]" class="btn btn-primary mt-3">
            </div>
        </div>
    </form>
</div>