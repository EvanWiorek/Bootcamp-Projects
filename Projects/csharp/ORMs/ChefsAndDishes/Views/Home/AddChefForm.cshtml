@{
  ViewData["Title"] = "Add a Chef";
}

@model Chef

<div class="card col-5 m-auto mt-4">
  <div class="card-body">
    <form asp-action="CreateChef" asp-asp-controller="Home" method="post">

      <div class="form-floating">
        <input asp-for="FirstName" class="form-control" placeholder="First Name:">
        <label asp-for="FirstName">First Name:</label>
        <span asp-validation-for="FirstName" class="validation-text"></span>
      </div>

      <div class="form-floating mt-3">
        <input asp-for="LastName" class="form-control" placeholder="Last Name:">
        <label asp-for="LastName">Last Name:</label>
        <span asp-validation-for="LastName" class="validation-text"></span>
      </div>

      <div class="form-floating mt-3">
        <input asp-for="DOB" class="form-control" placeholder="Date of Birth:" format="dd-MMM-yy">
        <label asp-for="DOB">Date of Birth:</label>
        <span asp-validation-for="DOB" class="validation-text"></span>
      </div>

      <div class="d-flex flex-column align-items-end">
        <input type="submit" value="Add Chef" class="btn btn-primary mt-3">
      </div>

    </form>
  </div>
</div>