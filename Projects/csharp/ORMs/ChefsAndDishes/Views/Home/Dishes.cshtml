@{
    ViewData["Title"] = "Yum! Check out our tasty dishes!";
}

<div class="col-6 m-auto mt-4">
    <table class="table table-hover table-dark border">
        <thead>
            <tr class="table-active">
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (Dish? Dish in ViewBag.AllDishes)
                {
                    <tr>
                        <td>@Dish.DishName</td>
                        <td>@Dish.Creator.FirstName @Dish.Creator.LastName</td>
                        <td>@Dish.Tastiness</td>
                        <td>@Dish.Calories</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>