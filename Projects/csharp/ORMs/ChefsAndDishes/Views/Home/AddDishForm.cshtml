@{
    ViewData["Title"] = "Add a Dish";
}

@model Dish

<div class="card col-8 m-auto mt-4 p-3 box-shadow">
    <form asp-action="CreateDish" asp-controller="Home" method="post">
        <div class="card-body d-flex justify-content-between">
            <div class="left-side col-4">

                <div class="form-floating">
                    <input asp-for="DishName" class="form-control" placeholder="Dish Name:">
                    <label asp-for="DishName">Dish Name:</label>
                    <span asp-validation-for="DishName" class="validation-text"></span>
                </div>

                <div class="form-floating mt-3">
                    <input asp-for="Calories" class="form-control" placeholder="Calories:" min="1" value="1">
                    <label asp-for="Calories">Calories:</label>
                    <span asp-validation-for="Calories" class="validation-text"></span>
                </div>

            </div>

            <div class="middle col-4">
                <div class="form-floating">
                    <select class="form-select" asp-for="ChefId">

                        @{
                            foreach(Chef? Chef in ViewBag.AllChefs)
                            {
                                <option value="@Chef.ChefId">@Chef.FirstName @Chef.LastName</option>
                            }
                        }
                        
                    </select>
                    <label asp-for="ChefId">Chef's Name:</label>
                    <span asp-validation-for="ChefId" class="validation-text"></span>
                </div>
            </div>

            <div class="right-side d-flex flex-column align-items-end col-3">

                <div class="form-floating col-12">
                    <select class="form-select" asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <label asp-for="Tastiness">Tastiness:</label>
                    <span asp-validation-for="Tastiness" class="validation-text"></span>
                </div>

                <input type="submit" value="@ViewData["ButtonText"]" class="btn btn-primary mt-3">
            </div>
        </div>
    </form>
</div>