<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous'>
  <link rel="stylesheet" href="~/css/style.css">
  <title>Countdown</title>
</head>
<body>

  <div class="top d-flex col-9 justify-content-around m-auto mt-5">

    <div class="left-side col-4">
      <div class="card">
        <div class="card-header"><h2>Start Time</h2></div>
        <div class="card-body">
          <h3>@DateTime.Now.ToString("dddd, dd MMMM yyyy tt")</h3>
        </div>
      </div>
    </div>

    <div class="right-side col-4">
      <div class="card">
        <div class="card-header"><h2>End Time</h2></div>
        <div class="card-body">
          <h3>@ViewBag.EndTime.ToString("dddd, dd MMMM yyyy tt")</h3>
        </div>
      </div>
    </div>

  </div>

  <div class="bottom col-7 m-auto mt-4">
    <div class="card">
      <div class="card-header"><h2>Time Remaining</h2></div>
      <div class="card-body">
        @{
          var today = DateTime.Now;
          var TimeBetweenDates = ViewBag.EndTime.Subtract(today);
          <h4>@TimeBetweenDates.Days Day(s), @TimeBetweenDates.Hours Hour(s), @TimeBetweenDates.Minutes Minute(s) Remaining</h4>
        }
      </div>
    </div>
  </div>

  <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous'></script>
</body>
</html>