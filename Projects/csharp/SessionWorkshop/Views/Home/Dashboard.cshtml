            <!--Single Route-->
            <div class="top-buttons">
                <form asp-action="ChangeNumber" asp-controller="Home" method="post">
                    <input type="submit" value="+ 1" class="btn btn-warning session-btn">
                    <input type="hidden" name="actionType" value="PlusOne">
                </form>
                <form asp-action="ChangeNumber" asp-controller="Home" method="post">
                    <input type="submit" value="- 1" class="btn btn-primary session-btn">
                    <input type="hidden" name="actionType" value="MinusOne">
                </form>
            </div>
            <div class="bottom-buttons">
                <form asp-action="ChangeNumber" asp-controller="Home" method="post">
                    <input type="submit" value="x 2" class="btn btn-danger session-btn">
                    <input type="hidden" name="actionType" value="TimesTwo">
                </form>
                <form asp-action="ChangeNumber" asp-controller="Home" method="post">
                    <input type="submit" value="+ Random" class="btn btn-success session-btn">
                    <input type="hidden" name="actionType" value="PlusRandom">
                </form>
            </div>
        </div>
    </div>
</div>

